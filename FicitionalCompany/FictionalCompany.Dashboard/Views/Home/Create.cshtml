
@{
    Layout = null;
}
@model FictionalCompany.Entities.Models.User


<div class="modal fade" id="" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="">Add New User</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
          
                <form method="post" asp-action="Create" asp-controller="Home">
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-12">
                        <label class="control-label font-weight-bold" for="Username">
                            Username
                        </label>
                        <input class="form-control" asp-for="Username" required />
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                        <label class="control-label font-weight-bold" for="Mail">
                            Mail
                        </label>
                        <input class="form-control" asp-for="Mail" required />
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                        <label class="control-label font-weight-bold" for="PhoneNumber">
                            PhoneNumber
                        </label>
                        <input class="form-control" asp-for="PhoneNumber" required />
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                        <label class="control-label font-weight-bold" for="Skillsets">
                            Skillsets
                        </label>
                        <input class="form-control" asp-for="Skillsets" required />
                    </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                        <label class="control-label font-weight-bold" for="Hobby">
                            Hobby
                        </label>
                        <input class="form-control" asp-for="Hobby" required />
                    </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                </form>


           
        </div>
    </div>
</div>